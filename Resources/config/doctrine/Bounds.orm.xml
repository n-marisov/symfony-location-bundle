<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://symfony.com/schema/dic/doctrine/doctrine-1.0.xsd">

    <!-- Ограничивающая рамка -->
    <embeddable name="Maris\Symfony\Geo\Entity\Bounds" >
        <field name="north" type="decimal" precision="8" scale="6" />
        <field name="west" type="decimal" precision="9" scale="6" />
        <field name="south" type="decimal" precision="8" scale="6" />
        <field name="east" type="decimal" precision="9" scale="6" />
    </embeddable>

</doctrine-mapping>